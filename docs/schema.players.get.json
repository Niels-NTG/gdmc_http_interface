{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "type": "array",
    "items": {
        "$ref": "#/definitions/PlayerInformationElement"
    },
    "definitions": {
        "PlayerInformationElement": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "name": {
                    "type": "string",
                    "title": "Player Name",
                    "description": "The name of the player.",
                    "examples": [
                        "Notch",
                        "Dinnerbone",
                        "jeb_"
                    ]
                },
                "x": {
                    "$ref": "#/definitions/PosAxis"
                },
                "y": {
                    "$ref": "#/definitions/PosAxis"
                },
                "z": {
                    "$ref": "#/definitions/PosAxis"
                }
            },
            "required": [
                "id",
                "x",
                "y",
                "z"
            ],
            "title": "Player information element"
        },
        "PosAxis": {
            "type": "integer",
            "title": "Position Axis",
            "description": "Describe x/y/z position of the player",
            "examples": [
                -2,
                781
            ]
        }
    }
}
